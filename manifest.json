{
  "name": "drive-download-extension",
  "manifest_version": 2,
  "version": "0.1.0",
  "description": "drive",
  "permissions": [
    "tabs",
    "contextMenus",
    "https://drive.google.com/*",
    "https://youtube.googleapis.com/*"
  ],
  "background": {
    "scripts": [ "src/background.js" ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [ "https://drive.google.com/*"],
      "js": [ "src/parent.js" ]
    },
    {
      "matches": [ "https://youtube.googleapis.com/*"],
      "all_frames": true,
      "js": [ "src/iframe.js" ]
    }
  ]
}
